    print('2 player game chosen')

def online ():
    print('online game chosen')

def menu ():
    print('press 1 for 1 player game')
    print('press 2 for 2 player game')
    print('press 3 for online')
    print('press 4 to exit')

    userinput=int(input('enter 1, 2, 4 or 4'))
    if userinput == 1:
        player1game()
    elif userinput == 2:
        player2game()
    elif userinput == 3:
        online()
    elif userinput == 4:
        print('exiting')
    else:
        print('input invalid ')
        menu()



menu()
